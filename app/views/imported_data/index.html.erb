<%= form_tag({action: :create}, multipart: true) do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<h1>Imported Data</h1>

<% if @imported_data.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @imported_data.each do |data| %>
        <tr>
          <td><%= data.name %></td>
          <td><%= data.description %></td>
          <td><%= link_to "Delete", imported_data_destroy_path(data), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No data imported yet.</p>
<% end %>

